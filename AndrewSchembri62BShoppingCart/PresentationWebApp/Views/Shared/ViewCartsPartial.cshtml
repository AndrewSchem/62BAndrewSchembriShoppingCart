@model IEnumerable<ShoppingCart.Application.ViewModels.CartViewModel>

@foreach (var c in Model)
{
<div class="card card- bg-dark text-light h-50">
	<img src="@c.Product.ImageUrl" class="card-img-top img-fluid" style="height:300px;" alt="...">
	<div class="p-4">
		<p class="text-truncate">User: @c.Email</p>
		<p>Product: @c.Product.Name</p>
		<p>Quantity: @c.Quantity</p>
		<a href="/Carts/Delete?id=@c.Id" class="btn btn-danger btn-block">Delete</a>
	</div>
</div>
}
